php_value display_errors On
php_value mbstring.http_input auto
php_value date.timezone America/Ecuador

RewriteEngine on

RewriteRule ^usuarios$ /Controllers/UserController.php
RewriteRule ^usuario/([A-Za-z\d[:punct:]]+)$ /Controllers/UserController.php?email=$1

RewriteRule ^login$ /Controllers/LoginController.php

RewriteRule ^correos$ /Controllers/UserController.php
RewriteRule ^correo/([A-Za-z\d]+)$ /Controllers/UserController.php?id=$1

RewriteRule ^desencriptar/([A-Za-z\d]+)$ /Controllers/DecryptController.php?id=$1